@using PlaylistManager.Models;

<h1>Songs</h1>

@if (Model.Count == 0)
{
    <h3>No songs have been added yet.</h3>
}

<ul>
    @foreach (Song song in Model)
    {
        <li>@Html.ActionLink($"{song.Name}", "Details", new { id = song.SongId }) | @song.Artist</li>
    }
</ul>

<p>@Html.ActionLink("Add new song", "Create")</p>