@using PlaylistManager.Models
@model PlaylistManager.Models.Song

<h2>Song Details</h2>
<hr />

<h3>Song: @Model.Name</h3>

@if (@Model.JoinEntities.Count == 0)
{
    <p class="pl-details">This song doesnt belong to a playlist</p>
}
else
{
    <h4>Playlists the song belongs to:</h4>

    <ul>
        @foreach (PlaylistSong join in Model.JoinEntities)
        {
            <li>@join.Playlist.Name</li>
        }
    </ul>

}

<p>@Html.ActionLink("Delete", "Delete", new { id = Model.SongId })</p>
<p>@Html.ActionLink("Edit", "Edit", new { id = Model.SongId })</p>
<p>@Html.ActionLink("Add this song to a playlist", "AddPlaylist", new { id = Model.SongId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>