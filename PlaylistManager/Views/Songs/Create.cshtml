@model PlaylistManager.Models.Song

<h4>Add a new Song</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Artist, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br />
    @Html.LabelFor(model => model.Artist)
    @Html.TextBoxFor(model => model.Artist)
    <br />
    <input class="button" type="submit" value="Add new Song" />
}
<br />
<p>@Html.ActionLink("Back to List", "Index")</p>