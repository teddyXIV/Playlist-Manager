@using PlaylistManager.Models;

<h1>Playlists</h1>

@if (@Model.Count == 0)
{
    <h3>No playlists have been created.</h3>
}

<ul>
    @foreach (Playlist playlist in Model)
    {
        <li>@Html.ActionLink($"{playlist.Name}", "Details", new { id = playlist.PlaylistId })</li>
    }
</ul>

<p>@Html.ActionLink("Add new playlist", "Create")</p>