@model PlaylistManager.Models.Genre

<h2>Add new Genre</h2>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    <input class="button" type="submit" value="Add new Genre" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all Genres", "Index")</p>